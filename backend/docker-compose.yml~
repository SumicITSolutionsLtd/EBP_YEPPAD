# =================================================================================
# Youth Connect Uganda - Complete Docker Compose Configuration
# Version: 2.0 - Production Ready
# =================================================================================
#
# FIXES APPLIED:
# ✅ MySQL port mapping (3307:3306)
# ✅ API Gateway port (8088 instead of 8080)
# ✅ All environment variables corrected
# ✅ Health checks for all services
# ✅ Proper service dependencies
#
# Usage:
#   Development: docker-compose up -d
#   Production:  docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d
#   Logs:        docker-compose logs -f [service-name]
#   Stop:        docker-compose down
#   Clean:       docker-compose down -v (removes volumes)
#
# =================================================================================

version: '3.8'

networks:
  youthconnect-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16

volumes:
  mysql_data:
    driver: local
  redis_data:
    driver: local
  uploads_data:
    driver: local
  prometheus_data:
    driver: local
  grafana_data:
    driver: local

services:
  # =================================================================================
  # DATABASE SERVICES
  # =================================================================================

  mysql:
    image: mysql:8.0.34
    container_name: youthconnect-mysql
    restart: unless-stopped
    ports:
      - "3307:3306"  # FIXED: External 3307, Internal 3306
    environment:
      MYSQL_ROOT_PASSWORD: Douglas20!
      MYSQL_DATABASE: youth_connect_db
      MYSQL_USER: youthconnect_user
      MYSQL_PASSWORD: youthconnect_pass
      TZ: Africa/Kampala
    volumes:
      - mysql_data:/var/lib/mysql
      - ./scripts/init-db.sql:/docker-entrypoint-initdb.d/01-init.sql:ro
    networks:
      youthconnect-network:
        ipv4_address: 172.20.0.10
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-pDouglas20!"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 60s
    command: >
      --default-authentication-plugin=mysql_native_password
      --character-set-server=utf8mb4
      --collation-server=utf8mb4_unicode_ci
      --max_connections=500
      --innodb_buffer_pool_size=256M

  redis:
    image: redis:7.0-alpine
    container_name: youthconnect-redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      youthconnect-network:
        ipv4_address: 172.20.0.11
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    command: redis-server --appendonly yes --maxmemory 512mb --maxmemory-policy allkeys-lru

  # =================================================================================
  # CORE INFRASTRUCTURE
  # =================================================================================

  service-registry:
    build:
      context: ./service-registry
      dockerfile: Dockerfile
    image: youthconnect/service-registry:latest
    container_name: youthconnect-service-registry
    restart: unless-stopped
    ports:
      - "8761:8761"
    environment:
      SPRING_PROFILES_ACTIVE: docker
      EUREKA_INSTANCE_HOSTNAME: service-registry
      EUREKA_CLIENT_REGISTER_WITH_EUREKA: "false"
      EUREKA_CLIENT_FETCH_REGISTRY: "false"
    networks:
      youthconnect-network:
        ipv4_address: 172.20.0.20
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8761/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s

  api-gateway:
    build:
      context: ./api-gateway
      dockerfile: Dockerfile
    image: youthconnect/api-gateway:latest
    container_name: youthconnect-api-gateway
    restart: unless-stopped
    ports:
      - "8088:8088"  # FIXED: Changed from 8080
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SERVER_PORT: 8088
      EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE: http://service-registry:8761/eureka/
      EUREKA_INSTANCE_PREFER_IP_ADDRESS: "true"
      SPRING_REDIS_HOST: redis
      SPRING_REDIS_PORT: 6379
      # Rate limiting
      APP_SECURITY_RATE_LIMIT_ENABLED: "true"
      APP_SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE: 100
      # Logging
      LOGGING_LEVEL_ROOT: INFO
      LOGGING_LEVEL_COM_YOUTHCONNECT: DEBUG
    networks:
      youthconnect-network:
        ipv4_address: 172.20.0.21
    depends_on:
      service-registry:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8088/health"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

  # =================================================================================
  # BUSINESS SERVICES
  # =================================================================================

  user-service:
    build:
      context: ./user-service
      dockerfile: Dockerfile
    image: youthconnect/user-service:latest
    container_name: youthconnect-user-service
    restart: unless-stopped
    ports:
      - "8082:8082"
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SERVER_PORT: 8082
      # Database - FIXED
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql:3306/youth_connect_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Africa/Kampala
      SPRING_DATASOURCE_USERNAME: youthconnect_user
      SPRING_DATASOURCE_PASSWORD: youthconnect_pass
      SPRING_DATASOURCE_DRIVER_CLASS_NAME: com.mysql.cj.jdbc.Driver
      # JPA
      SPRING_JPA_HIBERNATE_DDL_AUTO: update
      SPRING_JPA_SHOW_SQL: "false"
      SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT: org.hibernate.dialect.MySQL8Dialect
      # Service Discovery
      EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE: http://service-registry:8761/eureka/
      EUREKA_INSTANCE_PREFER_IP_ADDRESS: "true"
      # Redis
      SPRING_REDIS_HOST: redis
      SPRING_REDIS_PORT: 6379
      # JWT
      JWT_SECRET: aVeryLongAndSecureSecretKeyForYouthConnectUgandaHackathonProjectWith256BitsMinimum
      JWT_EXPIRATION_MS: 3600000
      # File Upload
      SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE: 10MB
      SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE: 10MB
      # Logging
      LOGGING_LEVEL_ROOT: INFO
      LOGGING_LEVEL_COM_YOUTHCONNECT: DEBUG
    volumes:
      - uploads_data:/app/uploads
    networks:
      youthconnect-network:
        ipv4_address: 172.20.0.30
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_healthy
      service-registry:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8082/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 120s

