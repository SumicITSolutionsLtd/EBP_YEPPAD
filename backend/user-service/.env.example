# ============================================================================
# ENTREPRENEURSHIP BOOSTER PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env in the same directory
# 2. Update all values marked with <CHANGE_ME>
# 3. Never commit .env to version control (it's in .gitignore)
# ============================================================================

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
APP_NAME=Entrepreneurship Booster Platform
APP_VERSION=1.0.0

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=epb_db
DB_USERNAME=postgres
DB_PASSWORD=Douglas20!

# Database Connection Pool
DB_POOL_SIZE=10
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000

# ============================================================================
# MYSQL CONFIGURATION (Legacy/Job Service)
# ============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_DATABASE=job_service_db
MYSQL_USER=root
MYSQL_PASSWORD=Douglas20!

# ============================================================================
# REDIS CONFIGURATION (Caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ============================================================================
# JWT SECURITY
# ============================================================================
# IMPORTANT: Change these in production!
JWT_SECRET=your-256-bit-secret-key-change-in-production-use-random-generator
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ============================================================================
# INTERNAL SERVICE SECURITY
# ============================================================================
# For service-to-service communication
INTERNAL_API_KEY=internal-secret-key-2024

# ============================================================================
# EUREKA SERVICE DISCOVERY
# ============================================================================
EUREKA_ENABLED=true
EUREKA_URL=http://localhost:8761/eureka/

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
APP_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=15728640

# ============================================================================
# SMS CONFIGURATION (Africa's Talking)
# ============================================================================
AFRICASTALKING_USERNAME=<CHANGE_ME>
AFRICASTALKING_API_KEY=<CHANGE_ME>
AFRICASTALKING_SHORTCODE=<CHANGE_ME>

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=<CHANGE_ME>
SMTP_PASSWORD=<CHANGE_ME>
SMTP_FROM=noreply@entrepreneurshipbooster.ug

# ============================================================================
# USSD CONFIGURATION
# ============================================================================
USSD_SERVICE_CODE=*256#
USSD_TIMEOUT_SECONDS=180

# ============================================================================
# AWS CONFIGURATION (Optional - for S3 file storage)
# ============================================================================
AWS_ACCESS_KEY_ID=<CHANGE_ME>
AWS_SECRET_ACCESS_KEY=<CHANGE_ME>
AWS_REGION=eu-west-1
AWS_S3_BUCKET=epb-uploads

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/user-service.log

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://entrepreneurshipbooster.ug
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# ============================================================================
# MONITORING & METRICS
# ============================================================================
PROMETHEUS_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ============================================================================
# AI RECOMMENDATION SERVICE
# ============================================================================
AI_SERVICE_URL=http://localhost:8090
AI_SERVICE_ENABLED=true

# ============================================================================
# NOTIFICATION PREFERENCES
# ============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_PUSH_ENABLED=false

# ============================================================================
# DOCKER COMPOSE OVERRIDES
# ============================================================================
COMPOSE_PROJECT_NAME=entrepreneurship-booster
DOCKER_NETWORK=epb-network

# ============================================================================
# PRODUCTION SETTINGS (Uncomment for production)
# ============================================================================
# ENVIRONMENT=production
# LOG_LEVEL=WARN
# EUREKA_URL=http://eureka-server:8761/eureka/
# DB_HOST=postgres-production.example.com
# REDIS_HOST=redis-production.example.com