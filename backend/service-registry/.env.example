# ================================================================================
# Service Registry - Environment Variables Template
# ================================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!
# ================================================================================

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8761

# Eureka Server Configuration
EUREKA_HOSTNAME=service-registry
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# Security Credentials
# ⚠️  IMPORTANT: Change these in production!
EUREKA_USERNAME=admin
EUREKA_PASSWORD=changeme_in_production_2025!

# JVM Configuration
XMS=512m
XMX=1g
MAX_METASPACE=256m
CUSTOM_JAVA_OPTS=-Duser.timezone=Africa/Kampala

# Logging Configuration
LOG_DIR=/var/log/youth-connect
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_EUREKA=INFO

# Docker Configuration
DOCKER_IMAGE_NAME=youthconnect/service-registry
DOCKER_IMAGE_TAG=2.0.0

# Kubernetes Configuration
K8S_NAMESPACE=youthconnect
K8S_REPLICAS=3
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=1000m
K8S_MEMORY_REQUEST=512Mi
K8S_MEMORY_LIMIT=1Gi

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_EXPORT_INTERVAL=60s