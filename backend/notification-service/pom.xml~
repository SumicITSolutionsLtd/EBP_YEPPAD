	</properties>

	<!-- ═══════════════════════════════════════════════════════════════════════
         DEPENDENCIES
         ═══════════════════════════════════════════════════════════════════════ -->
	<dependencies>

		<!-- ═════════════════════════════════════════════════════════════════
